#=========================== Filebeat prospectors =============================

filebeat.prospectors:
- input_type: log
  paths: /mnt/logs/OauthService.log
  document_type: webapp
  fields:
    service: fenew
    wbeapp: OauthSerive
    environment: stage
    containerizeed: yes
  fields_under_root: true 

